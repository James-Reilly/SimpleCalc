<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Calculator"
    android:clickable="false"
    android:background="#FFFFFF"
    android:id="@+id/relativelayout"
    android:accessibilityLiveRegion="none">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:id="@+id/frameLayout">


        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="5"
            android:orientation="vertical"
            android:rowCount="5">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonOpen"
                android:background="@drawable/openparen"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="0"
                android:layout_column="0" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonClose"
                android:background="@drawable/closeparen"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="0"
                android:layout_column="1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonPow"
                android:background="@drawable/squared"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="0"
                android:layout_column="2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonClr"
                android:background="@drawable/clear"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="0"
                android:layout_column="3" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton1"
                android:background="@drawable/num1"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="1"
                android:layout_column="0" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:background="@drawable/num2"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="1"
                android:layout_column="1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:background="@drawable/num3"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="1"
                android:layout_column="2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonplus"
                android:background="@drawable/opplus"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="1"
                android:layout_column="3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:background="@drawable/num4"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="2"
                android:layout_column="0" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:background="@drawable/num5"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="2"
                android:layout_column="1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:background="@drawable/num6"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="2"
                android:layout_column="2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonminus"
                android:background="@drawable/opmin"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="2"
                android:layout_column="3" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:background="@drawable/num7"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="3"
                android:layout_column="0" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton8"
                android:background="@drawable/num8"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="3"
                android:layout_column="1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:background="@drawable/num9"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="3"
                android:layout_column="2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonMult"
                android:background="@drawable/opmult"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="3"
                android:layout_column="3" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonTBA"
                android:background="@drawable/decimal"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="4"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton0"
                android:background="@drawable/num0"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="4"
                android:layout_column="1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtoneq"
                android:background="@drawable/equal"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="4"
                android:layout_column="2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonDiv"
                android:background="@drawable/opdiv"
                android:layout_margin="5dp"
                android:onClick="onButtonClick"
                android:layout_row="4"
                android:layout_column="3" />



        </GridLayout>


    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        style="@style/AppTheme"
        android:autoText="true"
        android:textSize="35sp"
        android:textIsSelectable="false"
        android:theme="@style/AppTheme"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#b0bec5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:maxLines="1"
        android:elegantTextHeight="false"
        android:lines="1" />
    <Button
        android:id="@+id/delete"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/ic_backspace_white_18dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:onClick="onButtonClick" />



</RelativeLayout>
